@model MonteCarloSimulationDto

<div class="modal fade" id="monteCarloSimulationModal" tabindex="-1" role="dialog" aria-labelledby="monteCarloSimulationModal-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="monteCarloSimulationForm" class="form-horizontal">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="monteCarloSimulationModal-label">Monte Carlo Simulation</h4>
                </div>
                <div class="modal-body" style="padding-bottom: 0; max-height: 640px; overflow: auto;">
                    @Html.EditorFor(x => x.TradingAccountId, new { onChange = "TradingAnalyzer.MonteCarloSimulation.tradingAccountChange", onDataBound = "TradingAnalyzer.MonteCarloSimulation.tradingAccountChange" })
                    @Html.EditorFor(x => x.NumberOfTradesInSample)
                    @Html.EditorFor(x => x.NumberOfTradesPerIteration)
                    @Html.EditorFor(x => x.NumberOfIterations)
                    @Html.HiddenFor(x => x.Id)
                    @Html.HiddenFor(x => x.TimeStamp)
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
